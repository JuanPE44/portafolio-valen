---
import Layout from "../../layouts/Layout.astro";
import { TRABAJOS_LIST } from "../../constants";
import Galeria from "../../components/Galeria.astro";

export async function getStaticPaths() {
  const props = TRABAJOS_LIST.map((trabajo) => {
    return {
      params: {
        name: trabajo.title,
      },
    };
  });
  return props;
}

const { name } = Astro.params;
---

<Layout title={`Galeria | ${name}`}>
  <div
    class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
  >
  </div>
  <main class="w-full relative flex flex-col items-center px-10 md:px-20">
    <h2
      class="text-5xl font-bold italic mt-20"
      transition:name={`title-${name}`}
    >
      {name}
    </h2>
    <img
      transition:name={name}
      class="h-96 w-96 mt-10 aspect-square object-cover rounded-3xl"
      src={`../../public/images/${name}.webp`}
      alt=""
    />
    <Galeria nombre={name} />
  </main>
</Layout>
