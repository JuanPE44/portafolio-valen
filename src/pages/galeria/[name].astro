---
import Layout from "../../layouts/Layout.astro";
import { TRABAJOS_LIST } from "../../constants";
import Galeria from "../../components/Galeria.astro";

export async function getStaticPaths() {
  const props = TRABAJOS_LIST.map((trabajo) => {
    return {
      params: {
        name: trabajo.title,
      },
    };
  });
  return props;
}

const { name } = Astro.params;
---

<Layout title={`Galeria | ${name}`}>
  <main
    class="w-full relative min-h-screen"
    style={`background-image: url(../../public/images/${name}.webp)`}
  >
    <div
      class="w-full min-h-screen px-6 md:px-20 bg-[#151f10dd] flex flex-col items-center backdrop-blur-sm"
    >
      <h2
        transition:name={`title-${name}`}
        class="text-5xl pt-20 italic text-center font-bold text-gray-100"
      >
        {name}<span class="text-green-600">.</span>
      </h2>
      <Galeria nombre={name} />
    </div>
  </main>
</Layout>
