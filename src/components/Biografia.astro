---
import { Image } from "astro:assets";
import Badge from "./Badge.astro";
import valen from "../../public/images/valen.webp";
---

<section class="fondo-biografia relative" id="biografia">
  <div
    class="z-[100] w-full px-6 sm:pt-20 sm:pb-40 bg-[#302916dd] min-h-screen flex flex-col items-center backdrop-blur-sm"
  >
    <h2
      class="text-3xl sm:text-5xl pt-20 italic text-center font-bold text-gray-300"
    >
      Biografia<span class="text-orange-600">.</span>
    </h2>

    <Image
      class="w-40 h-40 object-cover rounded-full mt-10 sm:mt-20 mb-4 mx-auto"
      src={valen}
      alt="foto de valen ruiz"
    />
    <div class="mt-8">
      <Badge>Disponible para trabajar</Badge>
      <div class="max-w-[700px] mb-20">
        <h1
          class="text-3xl sm:text-5xl font-bold flex mt-3 items-center gap-x-4 pb-4"
        >
          Hola, soy Valen Ruiz
        </h1>
        <h2 class="text-xl sm:text-2xl text-wrap">
          <span class="text-yellow-200/90">Técnico multimedial.</span>
          <span class="opacity-80">Tengo 23 años y vivo</span>
          <span class="text-red-200/90">en Tandil, Buenos Aires.</span><span
            class="opacity-80"
          >
            Me apasiona la fotografía y la realización de videos, siempre con un
            buen ojo a los detalles y emociones.</span
          >
        </h2>
      </div>
    </div>
  </div>
</section>
